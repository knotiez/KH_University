<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="com.kh.khu.board.model.vo.Board" alias="Board"/>
		<typeAlias type="com.kh.khu.board.model.vo.Reply" alias="Reply"/>
		<typeAlias type="com.kh.khu.classroom.model.vo.Class" alias="Class"/>
		<typeAlias type="com.kh.khu.classroom.model.vo.ClassDetail" alias="ClassDetail"/>
		<typeAlias type="com.kh.khu.grade.model.vo.Grade" alias="Grade"/>
		<typeAlias type="com.kh.khu.member.model.vo.Member" alias="Member"/>
		<typeAlias type="com.kh.khu.notice.model.vo.Notice" alias="Notice"/>
		<typeAlias type="com.kh.khu.scholarships.model.vo.Scholarships" alias="Scholarship"/>
		<typeAlias type="com.kh.khu.scholarships.model.vo.ScholarshipsStu" alias="ScholarshipStu"/>
		<typeAlias type="com.kh.khu.student.model.vo.Student" alias="Student"/>
		<typeAlias type="com.kh.khu.tuition.model.vo.Tuition" alias="Tuition"/>
		<typeAlias type="com.kh.khu.tuition.model.vo.TuitionPayment" alias="TuitionPayment"/>
	</typeAliases>
	<!-- 유의사항 : 미리 등록해두려면 해당 클래스가 진짜 존재하고 있는 상태여야한다.(뿐만아니라 namespace까지도 지정되어있어야함) -->
	<!-- 
		environment, dataSource에 기술했던 DB연결관련 정보는 root-context.xml에 작성 할 예정
		왜? DB등록은 서버연결과 동시에 같이 이뤄져야되기 때문에
		   서버 스타트와 동시에 바로 읽혀지는 root-context.xml 문서에 기술할 예정
	 -->
	<mappers>
		<mapper resource="/mappers/board-mapper.xml"/>
		<mapper resource="/mappers/class-mapper.xml"/>
		<mapper resource="/mappers/grade-mapper.xml"/>
		<mapper resource="/mappers/member-mapper.xml"/>
		<mapper resource="/mappers/notice-mapper.xml"/>
		<mapper resource="/mappers/scholarships-mapper.xml"/>
		<mapper resource="/mappers/student-mapper.xml"/>
		<mapper resource="/mappers/tuition-mapper.xml"/>
	</mappers>

</configuration>